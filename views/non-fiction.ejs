<%- include('layouts/header', { title: title, user: user, categories: categories }) %>
    <link rel="stylesheet" href="/css/nonfiction.css">

    <div class="container">
        <div class="non-fiction-header">
            <h1>Non-Fiction Books</h1>
            <p>Discover biographies, history, science, and more in our non-fiction collection.</p>
        </div>

        <div class="book-filters">
            <select class="form-control">
            <option value="all">All Non-Fiction</option>
            <option value="biographies">Biographies</option>
            <option value="history">History</option>
            <option value="science">Science</option>
            <option value="self-help">Self-Help</option>
            <option value="travel">Travel</option>
        </select>
            <div class="sort-options">
                <label>Sort by:</label>
                <select class="form-control">
                <option value="newest">Newest</option>
                <option value="price-low">Price: Low to High</option>
                <option value="price-high">Price: High to Low</option>
                <option value="bestselling">Bestselling</option>
            </select>
            </div>
        </div>

        <div class="book-grid">
            <% books.forEach(book => { %>
                <div class="book-card">
                    <div class="book-cover">
                        <img src="<%= book.image %>" alt="<%= book.title %>">
                        <div class="book-overlay">
                            <button class="btn quick-view">Quick View</button>
                            <button class="btn add-to-cart">Add to Cart</button>
                        </div>
                    </div>
                    <div class="book-info">
                        <h3>
                            <%= book.title %>
                        </h3>
                        <p class="author">by
                            <%= book.author %>
                        </p>
                        <p class="price">$
                            <%= book.price.toFixed(2) %>
                        </p>
                    </div>
                </div>
                <% }); %>
        </div>

        <div class="pagination">
            <ul>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">Next Â»</a></li>
            </ul>
        </div>

        <div class="non-fiction-featured">
            <h2>Featured Non-Fiction Collections</h2>
            <div class="featured-collections">
                <div class="collection">
                    <img src="/images/biographies.jpg" alt="Biographies">
                    <h3>Biographies</h3>
                    <p>Inspiring stories of remarkable individuals</p>
                </div>
                <div class="collection">
                    <img src="/images/science.jpg" alt="Science">
                    <h3>Science</h3>
                    <p>Explore the mysteries of our world</p>
                </div>
                <div class="collection">
                    <img src="/images/history.jpg" alt="History">
                    <h3>History</h3>
                    <p>Learn from the past to understand the present</p>
                </div>
            </div>
        </div>
    </div>

    <%- include('layouts/footer') %>