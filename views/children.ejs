<%- include('layouts/header', { title: title, user: user, categories: categories }) %>
    <link rel="stylesheet" href="/css/children.css">


    <div class="container">
        <div class="children-header">
            <h1>Children's Books</h1>
            <p>Adventure awaits! Explore our magical collection of books for kids and young adults.</p>
        </div>

        <div class="age-range-nav">
            <ul>
                <li class="active"><a href="#">All Ages</a></li>
                <li><a href="#">Ages 0-3</a></li>
                <li><a href="#">Ages 4-7</a></li>
                <li><a href="#">Ages 8-12</a></li>
                <li><a href="#">Young Adult</a></li>
            </ul>
        </div>

        <div class="book-filters">
            <select class="form-control">
            <option value="all">All Categories</option>
            <option value="picture-books">Picture Books</option>
            <option value="activity-books">Activity Books</option>
            <option value="educational">Educational</option>
            <option value="fantasy">Fantasy & Adventure</option>
        </select>
            <div class="sort-options">
                <label>Sort by:</label>
                <select class="form-control">
                <option value="newest">Newest</option>
                <option value="price-low">Price: Low to High</option>
                <option value="price-high">Price: High to Low</option>
                <option value="bestselling">Bestselling</option>
            </select>
            </div>
        </div>

        <div class="book-grid">
            <% books.forEach(book => { %>
                <div class="book-card">
                    <div class="book-cover">
                        <div class="ribbon">Kids' Choice</div>
                        <img src="<%= book.image %>" alt="<%= book.title %>">
                        <div class="book-overlay">
                            <button class="btn quick-view">Quick View</button>
                            <button class="btn add-to-cart">Add to Cart</button>
                        </div>
                    </div>
                    <div class="book-info">
                        <h3>
                            <%= book.title %>
                        </h3>
                        <p class="author">by
                            <%= book.author %>
                        </p>
                        <p class="price">‚Çπ
                            <%= book.price.toFixed(2) %>
                        </p>
                    </div>
                </div>
                <% }); %>
        </div>

        <div class="children-featured">
            <h2>Featured Collections</h2>
            <div class="featured-characters">
                <div class="character">
                    <img src="/images/harrypotter.jpeg" alt="Harry Potter">
                    <h3>Harry Potter</h3>
                </div>
                <div class="character">
                    <img src="/images/child2.jpeg" alt="Winnie the Pooh">
                    <h3>Winnie the Pooh</h3>
                </div>
                <div class="character">
                    <img src="/images/peppapig.png" alt="Peppa Pig">
                    <h3>Peppa Pig</h3>
                </div>
                <div class="character">
                    <img src="/images/seuss.jpeg" alt="Dr. Seuss">
                    <h3>Dr. Seuss</h3>
                </div>
            </div>
        </div>

        <div class="reading-tips">
            <h2>Reading Tips for Parents</h2>
            <div class="tips-grid">
                <div class="tip">
                    <div class="tip-icon">üìö</div>
                    <h3>Establish a Reading Routine</h3>
                    <p>Set aside time each day for reading together with your child.</p>
                </div>
                <div class="tip">
                    <div class="tip-icon">üîç</div>
                    <h3>Let Them Choose</h3>
                    <p>Allow your child to select books that interest them to build enthusiasm.</p>
                </div>
                <div class="tip">
                    <div class="tip-icon">üí¨</div>
                    <h3>Ask Questions</h3>
                    <p>Engage your child by asking questions about the story and characters.</p>
                </div>
            </div>
        </div>
    </div>

    <%- include('layouts/footer') %>